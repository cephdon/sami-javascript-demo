.container.theme-showcase(role="main")
  .page-header
    h1 Devices
  .col-md-12
    table.table.table-striped
      thead
        tr
          th #
          th Name
          th Type
          th Token
          th
      tbody
        tr(ng-repeat='device in devices')
          td(ng-bind='device.id')
          td(ng-bind='device.name')
          td(ng-bind='findType(device.dtid).name')
          td(ng-bind='device.properties.credentials.samiAccessToken')
          td
            button.btn.btn-danger(ng-click='destroy(device.id)') Delete
    div(sami-loading='devices')
  p
    a.btn.btn-lg.btn-primary(href='/#/devices/new') Register Device
